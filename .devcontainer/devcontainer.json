{
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "remoteUser": "vscode",
  "workspaceFolder": "/home/vscode",
  // "features": {
  //   "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  // },
   "customizations": {
    "vscode": {
      "settings": {
        "workbench.startupEditor": "none",
        "github.codespaces.devcontainerChangedNotificationStyle": "none",
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "Setup User",
              "type": "shell",
              "command": "/workspaces/$RepositoryName/.devcontainer/setupUser.bash",
              "runOptions": {
                "runOn": "folderOpen"
              },
              "presentation": {
                "reveal": "never",
                "close": true
              }
            },
            {
              "label": "Install Kit Features",
              "type": "shell",
              "command": "/workspaces/$RepositoryName/.devcontainer/installKitFeatures.bash",
              "runOptions": {
                "runOn": "folderOpen"
              },
              "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": "false"
              }
            }
          ]
        }
      }
    }
  }
}
