{
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "remoteUser": "vscode",
  "workspaceFolder": "/home/vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.startupEditor": "none",
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "Open KitClient",
              "dependsOrder": "sequence",
              "dependsOn": [
                "Setup Student Account",
                "Close Workspace"
              ],
              "runOptions": {
                "runOn": "folderOpen"
              },
              "presentation": {
                "reveal": "never"
              }
            },
            {
              "label": "Setup Student Account",
              "type": "shell",
              "command": "/workspaces/$RepositoryName/.devcontainer/setupStudentAcct.bash",
              "presentation": {
                "reveal": "never"
              }
            },
            {
              "label": "Close Workspace",
              "type": "process",
              "command": "${input:closeWorkspace}",
              "presentation": {
                "reveal": "never"
              }
            }
          ],
          "inputs": [
            {
              // Hides some additional VSCode UI elements for which there
              // are no settings available.
              "id": "closeWorkspace",
              "type": "command",
              "command": "workbench.action.closeFolder"
            }
          ]
        }
      }
    }
  }
}