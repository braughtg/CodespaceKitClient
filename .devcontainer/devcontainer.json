{
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "remoteUser": "vscode",
  "workspaceFolder": "/home/vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "/workspaces/$RepositoryName/.devcontainer/setupUser.bash",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.startupEditor": "none",
        "github.codespaces.devcontainerChangedNotificationStyle": "none",
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "Setup Kit",
              "type": "shell",
              "command": "/workspaces/$RepositoryName/.devcontainer/setupKit.bash",
              "runOptions": {
                "runOn": "folderOpen"
              },
              "presentation": {
                "reveal": "never",
                "close": true
              }
            }
          ]
        }
      }
    }
  }
}
